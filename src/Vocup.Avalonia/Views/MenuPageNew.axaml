<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:Vocup.Avalonia.ViewModels;assembly=Vocup.Avalonia"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Vocup.Avalonia.Views.MenuPageNew">

  <StackPanel>
    <TextBox Text="{Binding MotherTongue}" Watermark="Mother tongue" UseFloatingWatermark="True" />
    <TextBox Text="{Binding ForeignLanguage}" Watermark="Foreign language" UseFloatingWatermark="True" />
    <Button Command="{Binding Commit}">Create</Button>
  </StackPanel>
  
</UserControl>
